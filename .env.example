# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/booking_platform
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-database-password

# Email Configuration (Production)
# Choose your SMTP provider and configure accordingly
# See backend/EMAIL_CONFIGURATION.md for detailed instructions

# Option 1: Gmail (for development/testing)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Option 2: Brevo (recommended for production)
# MAIL_HOST=smtp-relay.brevo.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-brevo-smtp-key

# Option 3: SendGrid
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key

# Option 4: AWS SES
# MAIL_HOST=email-smtp.eu-west-1.amazonaws.com
# MAIL_PORT=587
# MAIL_USERNAME=your-ses-smtp-username
# MAIL_PASSWORD=your-ses-smtp-password

# Email sender configuration
MAIL_FROM=noreply@booking-platform.com
MAIL_FROM_NAME=Booking Platform

# Application Configuration
APP_BASE_URL=http://localhost:4200
SPRING_PROFILES_ACTIVE=dev

# JWT Configuration
JWT_SECRET=your-very-long-and-secure-secret-key-change-this-in-production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:4200
