# ===========================================
# SECURITY (REQUIRED)
# ===========================================

# JWT Secret Key (REQUIRED - Minimum 256 bits / 32 bytes)
# Generate with: openssl rand -hex 32
JWT_SECRET=your_secure_random_secret_here_minimum_64_hex_characters_required

# ===========================================
# DATABASE
# ===========================================

DATABASE_URL=jdbc:postgresql://localhost:5432/your_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_db_password_here

# ===========================================
# REDIS (Optional - for caching)
# ===========================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# Gmail SMTP Example
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password_here

# Application URLs
APP_MAIL_FROM=noreply@booking-platform.com
APP_MAIL_FROM_NAME=Booking Platform
APP_BASE_URL=http://localhost:4200

# ===========================================
# SPRING PROFILES
# ===========================================

SPRING_PROFILES_ACTIVE=local

# Stripe API Keys (Test Mode)
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs
STRIPE_PRICE_STARTER_MONTHLY=price_your_starter_monthly_price_id
STRIPE_PRICE_STARTER_YEARLY=price_your_starter_yearly_price_id
STRIPE_PRICE_PRO_MONTHLY=price_your_pro_monthly_price_id
STRIPE_PRICE_PRO_YEARLY=price_your_pro_yearly_price_id
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_your_enterprise_monthly_price_id
STRIPE_PRICE_ENTERPRISE_YEARLY=price_your_enterprise_yearly_price_id